### Settings from original zathurarc ###
set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"
set highlight-transparency 0.1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 700
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map k 5k
map j 5k
set render-loading              true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#cdd6f4'
set completion-bg '#1e1e2e'

# Command line completion group elements
set completion-group-fg '#45475a'
set completion-group-bg '#1e1e2e'

# Current command line completion element
set completion-highlight-fg '#1e1e2e'
set completion-highlight-bg '#cdd6f4'

# Default foreground/background color
set default-bg rgba(30,30,46,0.85)

# Input bar
set inputbar-fg '#cdd6f4'
set inputbar-bg '#1e1e2e'

# Notification
set notification-fg '#cdd6f4'
set notification-bg '#1e1e2e'

# Error notification
set notification-error-fg '#cdd6f4'
set notification-error-bg '#f38ba8'

# Warning notification
set notification-warning-fg '#cdd6f4'
set notification-warning-bg '#f38ba8'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#cdd6f4'
set statusbar-bg '#181825'

# Highlighting parts of the document (e.g. show search results)
set highlight-color rgba(69, 71, 90, 0.85)
set highlight-color rgba(69, 71, 90, 0.85)

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(255,255,255,0)
set recolor-darkcolor '#cdd6f4'

# 'Loading...' text
set render-loading-fg '#cdd6f4'
set render-loading-bg '#181825'

# Index mode
set index-fg '#cdd6f4'
set index-bg '#181825'

# Selected element in index mode
set index-active-fg '#181825'
set index-active-bg '#cdd6f4'
