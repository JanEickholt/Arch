### Settings from original zathurarc ###
set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"
set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 700
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map k 5k
map j 5k
set render-loading              true

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#e2cad3'
set completion-bg '#111110'

# Command line completion group elements
set completion-group-fg '#727088'
set completion-group-bg '#111110'

# Current command line completion element
set completion-highlight-fg '#111110'
set completion-highlight-bg '#e2cad3'

# Default foreground/background color
set default-bg rgba(17,17,16,0.85)

# Input bar
set inputbar-fg '#e2cad3'
set inputbar-bg '#111110'

# Notification
set notification-fg '#e2cad3'
set notification-bg '#111110'

# Error notification
set notification-error-fg '#e2cad3'
set notification-error-bg '#C8566F'

# Warning notification
set notification-warning-fg '#e2cad3'
set notification-warning-bg '#C8566F'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#e2cad3'
set statusbar-bg '#0f0c15'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#727088'
set highlight-active-color '#727088'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#e2cad3'

# 'Loading...' text
set render-loading-fg '#e2cad3'
set render-loading-bg '#0f0c15'

# Index mode
set index-fg '#e2cad3'
set index-bg '#0f0c15'

# Selected element in index mode
set index-active-fg '#0f0c15'
set index-active-bg '#e2cad3'
