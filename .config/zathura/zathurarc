### Settings from original zathurarc ###
set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"
set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 700
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map k 5k
map j 5k
set render-loading true

### zathura-xresources ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#F9FDFF'
set completion-bg '#111010'

# Command line completion group elements
set completion-group-fg '#8C605F'
set completion-group-bg '#111010'

# Current command line completion element
set completion-highlight-fg '#111010'
set completion-highlight-bg '#F9FDFF'

# Default foreground/background color
set default-bg rgba(17,16,16,0.80)

# Input bar
set inputbar-fg '#F9FDFF'
set inputbar-bg '#111010'

# Notification
set notification-fg '#F9FDFF'
set notification-bg '#111010'

# Error notification
set notification-error-fg '#F9FDFF'
set notification-error-bg '#A88C2D'

# Warning notification
set notification-warning-fg '#F9FDFF'
set notification-warning-bg '#6D764B'

# Status bar
set statusbar-fg '#F9FDFF'
set statusbar-bg '#3C3B3B'

# Highlighting parts of the document (e.g., show search results)
set highlight-color rgba(140,96,95,0.50)

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(255,255,255,0)
set recolor-darkcolor rgba(249,253,255,0.85)

# 'Loading...' text
set render-loading-fg '#F9FDFF'
set render-loading-bg '#3C3B3B'

# Index mode
set index-fg '#F9FDFF'
set index-bg '#3C3B3B'

# Selected element in index mode
set index-active-fg '#3C3B3B'
set index-active-bg '#F9FDFF'
