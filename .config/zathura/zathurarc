### Settings from original zathurarc ###
set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"
set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 700
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map k 5k
map j 5k
set render-loading true

### zathura-xresources ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#F1F1F1'
set completion-bg '#1e2233'

# Command line completion group elements
set completion-group-fg '#6E85D3'
set completion-group-bg '#1e2233'

# Current command line completion element
set completion-highlight-fg '#1e2233'
set completion-highlight-bg '#F1F1F1'

# Default foreground/background color
set default-bg rgba(30,34,51,0.80)

# Input bar
set inputbar-fg '#F1F1F1'
set inputbar-bg '#1e2233'

# Notification
set notification-fg '#F1F1F1'
set notification-bg '#1e2233'

# Error notification
set notification-error-fg '#F1F1F1'
set notification-error-bg '#096DC0'

# Warning notification
set notification-warning-fg '#F1F1F1'
set notification-warning-bg '#43B581'

# Status bar
set statusbar-fg '#F1F1F1'
set statusbar-bg '#1e2233'

# Highlighting parts of the document (e.g., show search results)
set highlight-color rgba(110,133,211,0.50)

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(255,255,255,0)
set recolor-darkcolor rgba(241,241,241,0.85)

# 'Loading...' text
set render-loading-fg '#F1F1F1'
set render-loading-bg '#1e2233'

# Index mode
set index-fg '#F1F1F1'
set index-bg '#1e2233'

# Selected element in index mode
set index-active-fg '#1e2233'
set index-active-bg '#F1F1F1'
